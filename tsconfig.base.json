{
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "es2021",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"]
    },

    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
}
